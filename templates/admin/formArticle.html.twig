{% extends "base.html.twig" %}

{% block title %}Article{% endblock %}

{% block body %}


    {% if 'editMode' %}
	    <h1 class="text-center my-3">Modifier Article</h1>
    {% else %}
	    <h1 class="text-center my-3">Ajouter Article</h1>
    {% endif %}
    

	<div class="container">
    
        {{ form_start(form, {
        attr: {
            novalidate: 'novalidate'
        }
    })}}
	{{ form_row(form.title, {
        label: 'titre'
    }) }}
	{{ form_row(form.category, {
        label: 'Categorie'
    }) }}
	{{ form_row(form.content, {
        label: 'Contenu',
        attr: {
            placeholder: "contenu de l'article"
        }
    }) }}

	{{ form_row(form.image) }}

    <button type="submit"  class="btn btn-secondary">Enregistrer</button>

	{{ form_end(form)}}

    </div>


{% endblock %}
